{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple_text": {
            "format": "%(asctime)s | %(levelname)-7s | %(name)s:%(funcName)s:%(lineno)d - %(message)s",
            "datefmt": "%d-%m-%Y %H:%M:%S"
        },
        "file_formatter": {
            "()": "research_utils.logging.handlers.FileFormatter"
        }, 
        "console_text": {
            "format": "%(asctime)s | %(levelname)-7s | %(name)s:%(funcName)s:%(lineno)d - %(message)s",
            "datefmt": "%d-%m-%Y %H:%M:%S"
        },
        "json_formatter": {
            "()": "research_utils.logging.handlers.JSONFormatter",
            "fmt_keys": {
                "level": "levelname",
                "logger": "name",
                "line": "lineno"
            }
        },
        "console_formatter": {
            "()": "research_utils.logging.handlers.ConsoleFormatter"
        }
    },
    "handlers": {
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "file_formatter",
            "filename": "logs/app.log",
            "maxBytes": 10485760,
            "backupCount": 5
        },
        "stdout": {
            "class": "logging.StreamHandler",
            "formatter": "console_formatter",
            "level": "INFO", 
            "stream": "ext://sys.stdout"
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": [
            "stdout",
            "file"
        ]
    }
}