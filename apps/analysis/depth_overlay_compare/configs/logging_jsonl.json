{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "json_formatter": {
            "()": "research_utils.logging.handlers.JSONFormatter",
            "fmt_keys": {
                "level": "levelname",
                "logger": "name",
                "line": "lineno"
            }
        },
        "console_formatter": {
            "()": "research_utils.logging.handlers.ConsoleFormatter"
        }
    },
    "filters": {
        "non_error": {
            "()": "research_utils.logging.handlers.NonErrorFilter"
        }
    },
    "handlers": {
        "stdout": {
            "class": "logging.StreamHandler",
            "level": "ERROR",
            "formatter": "console_formatter",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "json_formatter",
            "filename": "logs/def_log.jsonl",
            "maxBytes": 10485760,
            "backupCount": 5
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": ["stdout", "file"]
    }
}